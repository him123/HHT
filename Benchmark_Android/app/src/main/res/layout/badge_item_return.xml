<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/swipe_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

    <!-- Bottom View Start-->
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="@string/edit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark">

            <TextView
                android:id="@+id/tv_delete"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                 />
        </RelativeLayout>


    </LinearLayout>
    <!-- Bottom View End-->

    <!--Surface View Start -->
    <LinearLayout
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:text="@string/item_code"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/lbl_item_code"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:text="@string/description"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/lbl_item_description"
                android:layout_width="0dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:text="@string/cases"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/lbl_quantity_cases"
                android:layout_width="0dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="1"
                android:text="@string/units"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/lbl_quantity_units"
                android:layout_width="0dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:text="@string/returntype"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/lbl_return_type"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_weight="1"
                android:text="@string/return_reason"
                android:layout_width="0dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_weight="2"
                android:id="@+id/lbl_reason"
                android:layout_width="0dp"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_height="match_parent"/>


        </LinearLayout>
    </LinearLayout>
    <!--Surface View End -->


 </com.daimajia.swipe.SwipeLayout>


