<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/h3"
    android:layout_marginRight="@dimen/h3"
    android:layout_below="@+id/ll_btn"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_top"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/h1"
        android:layout_marginRight="@dimen/h1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fayha"
            android:gravity="start|center"
            android:textColor="@color/black"
            android:background="@color/lightgray"
            android:drawableRight="@drawable/ic_black_add"
            android:layout_marginBottom="@dimen/size_five"
            android:padding="@dimen/h3"
            android:id="@+id/tv_add"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berain"
            android:gravity="start|center"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_remove_black_24dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:id="@+id/tv_remove"
            android:layout_below="@+id/tv_add"
            android:layout_marginBottom="2dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_below="@id/tv_remove"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:paddingTop="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150 ML QTY"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:id="@+id/tv_left"
                    android:gravity="start|center"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_ctn_value"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q/CTN"
                    android:layout_toRightOf="@+id/tv_left"
                    android:layout_toLeftOf="@+id/iv_ctn_minus"
                    android:gravity="end"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_ctn_value"

                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_ctn_value"
                    android:id="@+id/iv_ctn_minus"
                    android:padding="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_ctn_add"
                    android:id="@+id/tv_ctn_value"
                    android:padding="10dp"
                    android:background="@color/white"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_ctn_add"
                    android:padding="5dp"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"

                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q/BTL"

                    android:layout_toLeftOf="@+id/iv_btl_minus"
                    android:gravity="end"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_btl_value"


                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_btl_value"
                    android:id="@+id/iv_btl_minus"
                    android:padding="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_btl_add"
                    android:id="@+id/tv_btl_value"
                    android:padding="10dp"
                    android:background="@color/white"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_btl_add"
                    android:padding="5dp"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250 ML QTY"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:id="@+id/tv_left"
                    android:gravity="start|center"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_ctn_value1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q/CTN"
                    android:layout_toRightOf="@+id/tv_left"
                    android:layout_toLeftOf="@+id/iv_ctn_minus1"
                    android:gravity="end"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_ctn_value1"


                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_ctn_value1"
                    android:id="@+id/iv_ctn_minus1"
                    android:padding="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_ctn_add1"
                    android:id="@+id/tv_ctn_value1"
                    android:padding="10dp"
                    android:background="@color/white"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_ctn_add1"
                    android:padding="5dp"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"


                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Q/CTN"
                    android:layout_toLeftOf="@+id/iv_btl_minus1"
                    android:gravity="end"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:layout_alignBaseline="@+id/tv_btl_value1"


                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_btl_value1"
                    android:id="@+id/iv_btl_minus1"
                    android:padding="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_btl_add1"
                    android:id="@+id/tv_btl_value1"
                    android:padding="10dp"
                    android:background="@color/white"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_btl_add1"
                   android:padding="5dp"
                    />


            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/lightgray"
        android:id="@+id/view"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/rl_bottom"
        android:padding="10dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="specify Reason: "
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spin"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_reason"
            android:entries="@array/returnReasons"

            >



        </Spinner>


    </RelativeLayout>


</LinearLayout>
