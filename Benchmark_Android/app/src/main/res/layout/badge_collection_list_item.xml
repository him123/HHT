<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/rl_item"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/h3"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_medium"
            android:text="@string/am5500_large_swiss_roll_vanila_24x110g"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="@dimen/size_five"
            android:id="@+id/tv_invoice_no"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_54_00_2_25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:layout_marginBottom="@dimen/space"
                    android:id="@+id/tv_invoice_date"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_54_00_2_25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:layout_marginBottom="@dimen/space"
                    android:id="@+id/tv_due_date"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_54_00_2_25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_min"
                    android:layout_marginBottom="@dimen/space"
                    android:id="@+id/tv_amount_due"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/categoryImage"
                    android:src="@drawable/theme_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/tv_invoice_amount"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/price_54_00_2_25"
                    android:textColor="@color/buttoncolor"
                    android:textSize="@dimen/label_small"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>