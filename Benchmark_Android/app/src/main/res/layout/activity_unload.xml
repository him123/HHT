<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/custom_tab_layout_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_bad_return"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:drawableTop="@drawable/icon_bad_returns"
                android:padding="@dimen/h1"
                android:textSize="@dimen/label_x_min"
                android:text="@string/bad_return"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_bad_return_variance"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:drawableTop="@drawable/icon_bad_return_variance"
                android:textSize="@dimen/label_x_min"
                android:padding="@dimen/h1"
                android:text="@string/bad_return_variance"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_fresh_unload"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:drawableTop="@drawable/icon_fresh_unload"
                android:textSize="@dimen/label_x_min"
                android:padding="@dimen/h1"
                android:text="@string/fresh_unload"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_ending_inventory"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:textSize="@dimen/label_x_min"
                android:drawableTop="@drawable/icon_ending_inventory"
                android:padding="@dimen/h1"
                android:text="@string/ending_inventory"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_inventory_variance"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:drawableTop="@drawable/icon_inventory_variance"
                android:padding="@dimen/h1"
                android:textSize="@dimen/label_x_min"
                android:text="@string/inventory_variance"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_truck_damage"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@color/manageinventorybuttons"
                android:drawablePadding="1dp"
                android:layout_marginTop="@dimen/all_padding"
                android:layout_marginLeft="@dimen/all_padding"
                android:layout_marginRight="@dimen/all_padding"
                android:layout_marginBottom="@dimen/all_padding"
                android:drawableTop="@drawable/icon_truck_damage"
                android:textSize="@dimen/label_x_min"
                android:padding="@dimen/h1"
                android:text="@string/truck_damage"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnUnloadInventory"
        android:text="@string/unload_inventory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/h3"
        android:layout_alignParentBottom="true"
        android:background="@color/buttoncolor"
        android:textColor="@color/white">
    </Button>
</RelativeLayout>