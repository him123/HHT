<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/h3"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_medium"
            android:text="@string/am5500_large_swiss_roll_vanila_24x110g"
            android:textColor="@color/buttoncolor"
            android:layout_marginBottom="@dimen/size_five"
            android:id="@+id/description"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_54_00_2_25"
            android:textColor="@color/black"
            android:textSize="@dimen/label_medium"
            android:layout_marginBottom="@dimen/all_padding"
            android:id="@+id/item"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_54_00_2_25"
            android:textColor="@color/black"
            android:textSize="@dimen/label_small"
            android:layout_marginBottom="@dimen/label_min"
            android:id="@+id/lbl_item_price"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_medium"
                    android:text="@string/cases"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_cases"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:layout_marginTop="@dimen/size_five"
                    tools:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:id="@+id/cases"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/label_big"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_medium"
                    android:text="@string/pcs"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_pcs"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:layout_marginTop="@dimen/size_five"
                    tools:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:id="@+id/units"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>