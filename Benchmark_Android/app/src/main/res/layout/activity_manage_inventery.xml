<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

				<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								>

								<Button
												android:id="@+id/btnLoad"
												android:layout_width="150dp"
												android:layout_height="150dp"
												android:layout_marginLeft="@dimen/image_width"
												android:layout_marginRight="10dp"
												android:layout_marginTop="100dp"
												android:background="@color/manageinventorybuttons"
												android:drawablePadding="1dp"
												android:drawableTop="@drawable/load"
												android:padding="@dimen/h1"
												android:text="@string/load"
												/>

								<Button
												android:id="@+id/btnLoadRequest"
												android:layout_width="150dp"
												android:layout_height="150dp"
												android:layout_marginLeft="@dimen/h3"
												android:layout_marginTop="100dp"
												android:background="@color/manageinventorybuttons"
												android:drawablePadding="1dp"
												android:drawableTop="@drawable/loaqrequest"
												android:padding="@dimen/h1"
												android:text="@string/loadrequest"
												/>
				</LinearLayout>

				<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="@dimen/h3"
								android:orientation="horizontal"
								>

								<Button
												android:id="@+id/btnVanStock"
												android:layout_width="150dp"
												android:layout_height="150dp"
												android:layout_marginLeft="@dimen/image_width"
												android:layout_marginRight="10dp"
												android:background="@color/manageinventorybuttons"
												android:drawablePadding="1dp"
												android:drawableTop="@drawable/vanstock"
												android:padding="@dimen/h1"
												android:text="@string/vanstock"
												/>

								<Button
												android:id="@+id/btnUnLoad"
												android:layout_width="150dp"
												android:layout_height="150dp"
												android:layout_marginLeft="@dimen/h3"
												android:background="@color/manageinventorybuttons"
												android:drawablePadding="1dp"
												android:drawableTop="@drawable/unload"
												android:padding="@dimen/h1"
												android:text="@string/unload"
												/>
				</LinearLayout>
</LinearLayout>
