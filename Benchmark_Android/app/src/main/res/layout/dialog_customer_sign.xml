<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ae.eo.activities.WorkOrderClientSatisfactionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Customer Signature"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label_small"
        android:layout_gravity="center"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_small"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="Customer Name" />

    <com.ae.benchmark.views.DrawingView
        android:id="@+id/signature"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@color/badge_background" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signature"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@color/buttoncolor"
        android:textAllCaps="true"
        android:text="@string/save"
        android:textColor="@color/white" />

</LinearLayout>
