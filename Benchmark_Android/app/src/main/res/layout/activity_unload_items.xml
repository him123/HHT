<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#fff"
            android:padding="@dimen/size_five"


            >
            <TextView
                android:id="@+id/badReturnLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bad_return"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_five"
                android:textSize="@dimen/label_x_min"
                android:textAppearance="?android:attr/textAppearanceSmall"
                >
            </TextView>

            <TextView
                android:id="@+id/badReturnCases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cases_100"
                android:layout_marginTop="@dimen/size_five"
                android:textSize="@dimen/label_min"
                android:layout_below="@+id/badReturnLabel"
                android:textAppearance="?android:attr/textAppearanceSmall"
                >
            </TextView>
            <TextView
                android:id="@+id/badReturnPcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pcs_100"
                android:layout_marginTop="@dimen/size_five"
                android:textSize="@dimen/label_min"
                android:layout_below="@+id/badReturnCases"
                android:textAppearance="?android:attr/textAppearanceSmall"
                >
            </TextView>

            <TextView
                android:id="@+id/badReturnTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_500aed"
                android:layout_marginTop="@dimen/size_five"
                android:textSize="@dimen/label_min"
                android:layout_below="@+id/badReturnPcs"
                android:textAppearance="?android:attr/textAppearanceSmall"
                >
            </TextView>
            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/badReturnEdit"
                android:text="Edit"
                android:layout_below="@+id/badReturnTotal"
                android:background="@color/textColorPrimaryRED"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                >
            </Button>
        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>