<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/h3"
        android:paddingRight="@dimen/h3"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="@color/colorPrimary"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h3"
                android:layout_marginTop="@dimen/h3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_150_ml_qty"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/h1"
                    android:id="@+id/tv_left"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_ctn_value"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q_ctn"
                    android:layout_toRightOf="@+id/tv_left"
                    android:layout_toLeftOf="@+id/iv_ctn_minus"
                    android:gravity="end"
                    android:paddingRight="@dimen/size_five"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_ctn_value"

                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_ctn_value"
                    android:id="@+id/iv_ctn_minus"
                    android:padding="@dimen/size_five"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_ctn_add"
                    android:id="@+id/tv_ctn_value"
                    android:padding="@dimen/h3"
                    android:background="@color/white"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_ctn_add"
                    android:padding="@dimen/size_five"
                    />


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/h3"

                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q_btl"

                    android:layout_toLeftOf="@+id/iv_btl_minus"
                    android:gravity="end"
                    android:paddingRight="@dimen/size_five"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_btl_value"


                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_btl_value"
                    android:id="@+id/iv_btl_minus"
                    android:padding="@dimen/size_five"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_btl_add"
                    android:id="@+id/tv_btl_value"
                    android:padding="@dimen/h3"
                    android:background="@color/white"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_btl_add"
                    android:padding="@dimen/size_five"
                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_marginLeft="@dimen/h1"
                android:layout_marginBottom="@dimen/size_five"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h3"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_250_ml_qty"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:id="@+id/tv_left"
                    android:gravity="start|center"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_ctn_value1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q_ctn"
                    android:layout_toRightOf="@+id/tv_left"
                    android:layout_toLeftOf="@+id/iv_ctn_minus1"
                    android:gravity="end"
                    android:paddingRight="@dimen/size_five"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_ctn_value1"


                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_ctn_value1"
                    android:id="@+id/iv_ctn_minus1"
                    android:padding="@dimen/size_five"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_ctn_add1"
                    android:id="@+id/tv_ctn_value1"
                    android:padding="@dimen/h3"
                    android:background="@color/white"

                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_ctn_add1"
                    android:padding="@dimen/size_five"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/h3"


                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/q_btl"
                    android:layout_toLeftOf="@+id/iv_btl_minus1"
                    android:gravity="end"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/size_five"
                    android:layout_alignBaseline="@+id/tv_btl_value1"
                    android:layout_centerHorizontal="true"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:layout_toLeftOf="@+id/tv_btl_value1"
                    android:id="@+id/iv_btl_minus1"
                    android:padding="@dimen/size_five"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/iv_btl_add1"
                    android:id="@+id/tv_btl_value1"
                    android:padding="@dimen/h3"
                    android:background="@color/white"
                    />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_btl_add1"
                    android:padding="@dimen/size_five"
                    />


            </RelativeLayout>













        </LinearLayout>






    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_bottom"

        >


        <RelativeLayout
            android:padding="@dimen/h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >




            <TextView
                android:id="@+id/tv_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="specify Reason: "
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/h3"
                />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spin"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/tv_reason"
                android:entries="@array/returnReasons"

                >



            </Spinner>
        </RelativeLayout>


    </RelativeLayout>





</LinearLayout>