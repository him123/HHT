<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

				<RelativeLayout
								android:id="@+id/rel1"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								>

								<RelativeLayout
												android:layout_width="match_parent"
												android:layout_height="match_parent"
												android:layout_above="@+id/btnProcess"
												android:layout_below="@+id/ithy">

												<EditText
																android:id="@+id/search"
																android:layout_width="fill_parent"
																android:layout_height="wrap_content"
																android:layout_marginLeft="@dimen/h3"
																android:layout_marginRight="@dimen/h3"
																android:layout_marginTop="@dimen/space"
																android:hint="@string/enter_category">
												</EditText>

												<ListView
																android:id="@+id/listview"
																android:layout_width="fill_parent"
																android:layout_height="wrap_content"
																android:layout_below="@+id/search"
																android:dividerHeight="0.3dp"
																android:divider="@color/textColorPrimaryRED"
																android:layout_marginLeft="@dimen/h3"
																android:layout_marginRight="@dimen/h3"
																android:layout_marginTop="@dimen/h4"
																/>
								</RelativeLayout>

								<Button
												android:id="@+id/btnProcess"
												android:layout_width="fill_parent"
												android:layout_height="wrap_content"
												android:layout_alignParentBottom="true"
												android:layout_marginRight="@dimen/space"
												android:layout_marginLeft="@dimen/space"
												android:layout_marginBottom="@dimen/space"
												android:layout_marginTop="@dimen/h2"
												android:background="@color/buttoncolor"
												android:paddingLeft="@dimen/space"
												android:paddingRight="@dimen/space"
												android:textAllCaps="true"
												android:text="@string/process_load_request"
												android:textColor="@color/white"
												/>

								<RelativeLayout
												android:id="@+id/ithy"
												android:layout_width="match_parent"
												android:layout_height="50dp"
												android:layout_alignParentTop="true"
												>

												<RelativeLayout
																android:layout_width="match_parent"
																android:layout_height="match_parent"
																android:layout_alignRight="@+id/line"
																android:layout_centerInParent="true">

																<TextView
																				android:id="@+id/tv1"
																				android:layout_width="wrap_content"
																				android:layout_height="wrap_content"
																				android:layout_centerVertical="true"
																				android:layout_marginLeft="20dp"
																				android:text="@string/date"
																				android:textSize="@dimen/label_small"
																				/>

																<ImageButton
																				android:id="@+id/btnDate"
																				android:layout_width="@dimen/big"
																				android:layout_height="@dimen/big"
																				android:layout_centerVertical="true"
																				android:layout_marginLeft="40dp"
																				android:layout_toEndOf="@+id/tv1"
																				android:background="@drawable/calend"
																				/>
												</RelativeLayout>

												<View
																android:id="@+id/line"
																android:layout_width="@dimen/list_space"
																android:layout_height="match_parent"
																android:layout_centerHorizontal="true"
																android:background="@android:color/black"
																/>

												<RelativeLayout
																android:layout_width="match_parent"
																android:layout_height="match_parent"
																android:layout_alignLeft="@+id/line"
																android:layout_centerHorizontal="true"
																android:layout_centerVertical="true"
																>

																<CheckBox
																				android:id="@+id/putOnHold"
																				android:layout_width="wrap_content"
																				android:layout_height="wrap_content"
																				android:layout_centerVertical="true"
																				android:text="@string/put_on_hold"
																				/>
												</RelativeLayout>
								</RelativeLayout>
				</RelativeLayout>
</RelativeLayout>


