<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/alert_dialog_height">

    <RelativeLayout
        android:background="@color/aqua"
        android:layout_width="match_parent"
        android:layout_height="@dimen/alert_dialog_header_height">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/map_pin"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="198dp">

        <TextView
            android:layout_weight="0.44"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/changingstatus"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textStyle="normal"
            android:text="@string/changingstatustext"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_alert_dialog_coordinates_mismatch_yes"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space"
                android:layout_marginRight="@dimen/space"
                android:text="@string/yes"
                android:background="@color/btn_positive"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_alert_dialog_coordinates_mismatch_no"
                android:background="@color/btn_negative"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space"
                android:layout_marginRight="@dimen/space"
                android:text="@string/no"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>