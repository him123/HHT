<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ae.benchmark.activities.CustomerListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/common_header" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h1"
            android:layout_marginRight="@dimen/h1"
            android:layout_marginTop="@dimen/h1"
            card_view:cardCornerRadius="@dimen/list_space"
            card_view:cardElevation="@dimen/size_four"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/text_today_schedule_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h1"
                android:textColor="@color/textColorPrimaryRED"
                android:text="@string/today_s_schedule"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/calend"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h1"
            android:layout_marginRight="@dimen/h1"
            android:layout_marginTop="@dimen/h1"
            card_view:cardCornerRadius="@dimen/list_space"
            card_view:cardElevation="@dimen/size_four"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/text_today_unserviced_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h1"
                android:textColor="@color/textColorPrimaryRED"
                android:text="@string/today_s_unserviced"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/ic_unserviced"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/h1"
            android:layout_marginRight="@dimen/h1"
            android:layout_marginTop="@dimen/h1"
            card_view:cardCornerRadius="@dimen/list_space"
            card_view:cardElevation="@dimen/size_four"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/text_today_all_route_customer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h1"
                android:textColor="@color/textColorPrimaryRED"
                android:text="@string/all_route_customer"
                android:textStyle="bold" />

            <ImageView
                android:src="@drawable/ic_map_icon"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>


        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
