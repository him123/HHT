<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >


            <LinearLayout
                android:id="@+id/ll_print"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/h3"
                android:orientation="vertical"
                android:background="@drawable/circular_bg"
                android:layout_marginRight="@dimen/h3"
                android:layout_marginLeft="@dimen/h3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/iv_print_"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/print"
                    android:textColor="@color/black"
                    />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_notprint"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/circular_bg"
                android:layout_marginLeft="@dimen/h3"
                android:layout_marginRight="@dimen/h3">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/iv_notprint"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/do_not_print"
                    android:textColor="@color/black"
                    />


            </LinearLayout>







        </LinearLayout>



    </LinearLayout>



