<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:weightSum="4"
    android:padding="@dimen/h3"
    android:background="@color/white">

    <LinearLayout
        android:layout_weight="3.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label_medium"
            android:text="@string/am5500_large_swiss_roll_vanila_24x110g"
            android:textColor="@color/buttoncolor"
            android:layout_marginBottom="@dimen/size_five"
            android:id="@+id/tv_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_54_00_2_25"
            android:textColor="@color/black"
            android:textSize="@dimen/label_medium"
            android:layout_marginBottom="@dimen/all_padding"
            android:id="@+id/tv_item_code"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_54_00_2_25"
            android:textColor="@color/black"
            android:textSize="@dimen/label_medium"
            android:layout_marginBottom="@dimen/label_min"
            android:id="@+id/tv_price"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_medium"
                    android:text="@string/cases"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_cases"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:layout_marginTop="@dimen/size_five"
                    tools:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:id="@+id/tv_cases_value"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/label_big"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/label_medium"
                    android:text="@string/pcs"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/tv_pcs"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_five"
                    android:layout_marginTop="@dimen/size_five"
                    tools:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/label_small"
                    android:id="@+id/tv_pcs_value"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/red_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/size_five"
            android:src="@drawable/red_arrow"
            />
    </LinearLayout>
</LinearLayout>