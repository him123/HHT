<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">


    <include layout="@layout/common_header"
        android:id="@+id/inc_common_header"
        />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inc_common_header"
        android:paddingTop="@dimen/h2"
        android:paddingLeft="@dimen/h2"
        android:paddingBottom="@dimen/h2"
        android:background="@drawable/back_radient"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_50_amc_invoice_discount"
            android:textSize="@dimen/label_big"
            android:textColor="@color/white"
            android:id="@+id/tv_promotion"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_top"
        android:layout_above="@id/ll_bottom"
        android:orientation="vertical"
        android:padding="@dimen/h3"
        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:id="@+id/tv_invoice_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/current_invoice_amount"
                android:textSize="@dimen/label_small"
                android:text=""
                android:enabled="false"
                android:textColor="@color/black"

                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:visibility="gone"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/return_qualified_amount"
                android:textSize="@dimen/label_small"
                android:text="0"
                android:enabled="false"
                android:textColor="@color/black"
                />

        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="horizontal"
            >


            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"

                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/return_qualified_amount"
                    android:textSize="@dimen/label_small"
                    android:text="@string/_0"
                    android:enabled="false"
                    android:textColor="@color/black"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/return_applied_promotion"
                    android:textSize="@dimen/label_small"
                    android:text="0"
                    android:enabled="false"
                    android:textColor="@color/black"
                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_promo_amount"
                android:textSize="@dimen/label_small"
                tools:text=""
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/et_discount"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/total_vat_amount"
                android:textSize="@dimen/label_small"
                tools:text=""
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/et_Vat"/>

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:visibility="visible"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_invoice_amount"
                android:textSize="@dimen/label_small"
                tools:text=""
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/tv_net_invoiceVat"/>

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textColorHint="@color/colorPrimary"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_invoice_amount"
                android:textSize="@dimen/label_small"
                tools:text=""
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/tv_net_invoice"/>

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:paddingTop="@dimen/h3"
        android:paddingBottom="@dimen/h3"
        android:background="@color/buttoncolor"
        android:gravity="center"

        >


        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--&gt;-->

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_keyboard_arrow_left_black_24dp"-->
        <!--/>-->


        <!--</LinearLayout>-->
        <!--<LinearLayout-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--&gt;-->


        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/ic_keyboard_arrow_right_black_24dp"-->
        <!--/>-->


        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="@dimen/h"
                android:layout_height="@dimen/h"
                android:src="@drawable/double_tick"
                />
        </LinearLayout>
    </LinearLayout>









</RelativeLayout>