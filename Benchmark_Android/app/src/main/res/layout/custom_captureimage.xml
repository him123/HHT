<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/h3"
    android:background="@color/white"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/label_big"
        android:textColor="@color/black"
        android:text="Shelf Arrangement"
        android:layout_marginBottom="@dimen/size_five"
        android:id="@+id/tv_titletext"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/image"
        android:layout_below="@+id/tv_titletext"
        android:textColor="@color/green"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_noimage"
        android:layout_below="@+id/tv_titletext"
        android:id="@+id/iv_end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remark"
        android:layout_below="@+id/iv_end"
        android:textColor="@color/green"
        />



</RelativeLayout>